<?xml version="1.0" encoding="UTF-8"?>
<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
              http://java.sun.com/xml/ns/javaee/web-facesconfig_2_1.xsd"
              version="2.1">

    <application>
        <action-listener>org.primefaces.application.DialogActionListener</action-listener>
        <navigation-handler>org.primefaces.application.DialogNavigationHandler</navigation-handler>
        <view-handler>org.primefaces.application.DialogViewHandler</view-handler>
    </application>

    <navigation-rule>
        <navigation-case>
            <from-outcome>index</from-outcome>
            <to-view-id>/WEB-INF/views/index.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>login</from-outcome>
            <to-view-id>/WEB-INF/views/customLoginHTML.html</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>project-list</from-outcome>
            <to-view-id>/WEB-INF/views/project/project-list.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>project-create</from-outcome>
            <to-view-id>/WEB-INF/views/project/project-create.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>project-edit</from-outcome>
            <to-view-id>/WEB-INF/views/project/project-edit.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>task-list</from-outcome>
            <to-view-id>/WEB-INF/views/task/task-list.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>task-create</from-outcome>
            <to-view-id>/WEB-INF/views/task/task-create.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>task-edit</from-outcome>
            <to-view-id>/WEB-INF/views/task/task-edit.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>user-registry</from-outcome>
            <to-view-id>/WEB-INF/views/user/user-registry.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>user-page</from-outcome>
            <to-view-id>/WEB-INF/views/user/user-page.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>user-login</from-outcome>
            <to-view-id>/WEB-INF/views/user/user-login.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>user-edit</from-outcome>
            <to-view-id>/WEB-INF/views/user/user-edit.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>

</faces-config>